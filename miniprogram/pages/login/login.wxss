.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

.login-box {
  width: 80%;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 60rpx;
}

.avatar-wrapper {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.avatar-btn {
  padding: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: none;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.nickname-wrapper {
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
}

.nickname-input {
  width: 80%;
  height: 88rpx;
  background-color: #f5f5f5;
  border-radius: 44rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  text-align: center;
}

.login-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn[disabled] {
  background-color: #9be0b8;
  color: #fff;
} 
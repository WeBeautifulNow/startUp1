.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

/* 头像设置 */
.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-btn {
  padding: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: none;
  margin-bottom: 10rpx;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #f0f0f0;
}

.avatar-tip {
  font-size: 24rpx;
  color: #999;
}

/* 昵称输入 */
.nickname-wrapper {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.nickname-input {
  width: 80%;
  height: 88rpx;
  background-color: #f5f5f5;
  border-radius: 44rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  text-align: center;
}

/* 设置项 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 30rpx;
  color: #333;
}

.setting-input {
  width: 200rpx;
  text-align: right;
  font-size: 30rpx;
  color: #666;
}

.setting-arrow {
  color: #999;
  font-size: 30rpx;
}

/* 危险操作 */
.danger .setting-label {
  color: #ff4d4f;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
} 
.container {
  padding: 20rpx;
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.room-info {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.room-id {
  font-size: 32rpx;
  font-weight: bold;
}

.share-btn {
  background-color: #07c160;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.players-list {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.players-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.players-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.player-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
}

.player-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-bottom: 4rpx;
}

.player-name {
  font-size: 24rpx;
  margin-bottom: 2rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  text-align: center;
}

.player-balance {
  font-size: 24rpx;
  font-weight: bold;
}

.positive {
  color: #e53935;
}

.negative {
  color: #07c160;
}

.transactions {
  flex: 1;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow-y: auto;
}

.transaction-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.transaction-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
}

.arrow {
  color: #999;
}

.amount {
  font-weight: bold;
  color: #333;
}

.bottom-buttons {
  display: flex;
  gap: 24rpx;
  padding: 16rpx 0 0 0;
  background-color: #fff;
  border-radius: 10rpx;
  justify-content: center;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ff4d4f;
  color: #fff;
  border-radius: 12rpx;
  font-size: 22rpx;
  padding: 0;
  margin: 0;
}

.action-btn:nth-child(2) {
  background-color: #07c160;
}
.action-btn:nth-child(3) {
  background-color: #ff9800;
}
.action-btn:nth-child(4) {
  background-color: #607d8b;
}

/* 转账弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  width: 80%;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.amount-input {
  border: 1rpx solid #ddd;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #07c160;
  color: #fff;
}

.messages {
  flex: 1;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow-y: auto;
  width: 100%;
  box-sizing: border-box;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  width: 100%;
}

.message-item {
  padding: 4rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.system-message {
  text-align: center;
  margin: 8rpx 0;
  display: flex;
  justify-content: center;
}

.system-message-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.system-time {
  color: #5c6bc0;
  font-size: 20rpx;
}

.system-content {
  color: #333;
  font-weight: bold;
  font-size: 24rpx;
}

.transfer-message {
  display: flex;
  align-items: flex-start;
  padding: 8rpx 0;
  width: 100%;
}
.message-main {
  display: flex;
  flex-direction: column;
  max-width: 70%;
}
.transfer-message.self {
  flex-direction: row;
  justify-content: flex-end;
  text-align: right;
}
.transfer-message.other {
  flex-direction: row;
  justify-content: flex-start;
  text-align: left;
}
.transfer-message.self .message-content {
  margin-left: 0;
  text-align: right;
}
.transfer-message.other .message-content {
  margin-left: 0;
  margin-right: 0;
  text-align: left;
}

.message-avatar {
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  margin: 0 8rpx;
}

.message-content {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #333;
  gap: 4rpx;
}

.nickname {
  color: #e53935;
  font-weight: bold;
  margin: 0 2rpx;
}
.amount {
  color: #e53935;
  font-weight: bold;
  margin-left: 2rpx;
}

.message-time {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 2rpx;
  width: 100%;
  box-sizing: border-box;
}
.transfer-message.self .message-time {
  text-align: right;
  align-self: flex-end;
}
.transfer-message.other .message-time {
  text-align: left;
  align-self: flex-start;
}

.batch-transfer-list {
  max-height: 400rpx;
  overflow-y: auto;
  margin-bottom: 20rpx;
}
.batch-transfer-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}
.batch-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
}
.batch-nickname {
  font-size: 24rpx;
  color: #333;
  width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.batch-amount-input {
  flex: 1;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 10rpx;
  font-size: 24rpx;
  background: #fafbfc;
}

.invite-btns {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin: 20rpx 0;
}
.invite-qrcode {
  display: flex;
  justify-content: center;
  margin: 24rpx 0 0 0;
}

.help-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin: 24rpx 0;
  color: #333;
  font-size: 24rpx;
  line-height: 1.6;
}

.home-btn {
  position: fixed;
  top: 32rpx;
  left: 32rpx;
  z-index: 1000;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.room-id-float {
  width: 100%;
  display: flex;
  justify-content: center;
  position: sticky;
  top: 0;
  z-index: 10;
  background: transparent;
  margin-bottom: 8rpx;
}
.room-id-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 8rpx 18rpx;
  border-radius: 14rpx;
  box-shadow: 0 2rpx 8rpx rgba(30,144,255,0.06);
  min-width: 180rpx;
  max-width: 90vw;
  background: #fff;
  font-size: 22rpx;
  position: relative;
}
.room-id-welcome {
  color: #607d8b;
  font-size: 22rpx;
}
.room-id-value-wrap {
  position: relative;
  display: inline-block;
  margin-left: 8rpx;
}
.room-id-value {
  color: #263238;
  font-size: 26rpx;
  font-weight: bold;
  letter-spacing: 1rpx;
  user-select: text;
  padding-right: 32rpx;
}
.room-id-copy-icon {
  position: absolute;
  top: -8rpx;
  right: 0;
  font-size: 24rpx;
  color: #1976d2;
  cursor: pointer;
}
.room-id-label {
  color: #90a4ae;
  font-size: 20rpx;
  margin-right: 8rpx;
}
.room-id-value {
  color: #263238;
  font-size: 24rpx;
  font-weight: bold;
  letter-spacing: 1rpx;
  user-select: text;
}
.copy-btn {
  font-size: 18rpx;
  padding: 0 6rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 0;
  background: transparent;
  color: #1976d2;
  border: none;
  margin-left: 4rpx;
  box-shadow: none;
} 